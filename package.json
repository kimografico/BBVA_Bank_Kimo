{
  "name": "bank-kimo",
  "description": "Webcomponent bank-kimo following open-wc recommendations",
  "license": "MIT",
  "author": "bank-kimo",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .js src/ test/",
    "format": "prettier --write 'src/**/*.js' 'test/**/*.js'",
    "prepare": "husky",
    "test": "cls && web-test-runner --coverage",
    "test:watch": "web-test-runner --watch",
    "test:commit": "web-test-runner --coverage",
    "test:lint": "npm run test && npm run lint:fix && npm run format",
    "build": "rimraf dist && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "web-dev-server",
    "start:api": "node api/server.js"
  },
  "dependencies": {
    "@vaadin/router": "^2.0.0",
    "json-server": "^0.17.1",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@web/dev-server": "^0.4.6",
    "@web/rollup-plugin-html": "^2.3.0",
    "@web/rollup-plugin-import-meta-assets": "^2.2.1",
    "@web/test-runner": "^0.18.2",
    "@web/test-runner-mocha": "^0.9.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "deepmerge": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.9",
    "rollup": "^4.18.1",
    "rollup-plugin-copy": "^3.5.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-workbox": "^8.1.0",
    "sinon": "^21.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "customElements": "custom-elements.json"
}
